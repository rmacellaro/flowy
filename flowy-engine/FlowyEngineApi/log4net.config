<?xml version="1.0" encoding="utf-8"?>
<log4net>
	<!-- CONSOLE APPENDER -->
	<appender name="ConsoleAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
		<mapping>
			<level value="INFO" />
			<forecolor value="Green" />
		</mapping>
		<mapping>
			<level value="WARN" />
			<forecolor value="Yellow" />
		</mapping>
		<mapping>
			<level value="ERROR" />
			<forecolor value="Red" />
		</mapping>
		<mapping>
			<level value="DEBUG" />
			<forecolor value="Blue" />
		</mapping>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date{dd/MM/yyyy HH:mm:ss};%thread;%level;%logger;%method;%message%newline" />
		</layout>
	</appender>
	<!-- CONFIGURAZIONE DEL FILE -->
	<appender name="RollingFileFlower" type="log4net.Appender.RollingFileAppender">
		<file value="../Logs/EngineApi.log" />
		<appendToFile value="true" />
		<rollingStyle value="Size" />
		<maximumFileSize value="10MB" />
		<maxSizeRollBackups value="10" />
		<staticLogFileName value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date{dd/MM/yyyy HH:mm:ss};%thread;%level;%logger;%method;%message%newline" />
		</layout>
	</appender>
	<!-- Aggiungo gli appender -->
	<root>
		<level value="DEBUG" />
		<appender-ref ref="RollingFileFlower" />
		<appender-ref ref="ConsoleAppender" />
	</root>
</log4net>